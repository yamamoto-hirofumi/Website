<div class="contianer">
  <% if current_user == @user %>
    <h2 class="text-center p-3">フォロワー</h2>
  <% else %>
    <h2 class="text-center p-3"><%= @user.name %>さんのフォロワー</h2>
  <% end %>
  <% if @users.exists? %>
    <%= render "users/index", users: @users %>
  <% else %>
    <p class="text-center">フォロワーユーザーはいません</p>
  <% end %>
</div>
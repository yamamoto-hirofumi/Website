<%= form_with url: posts_path, method: :get do |f| %>
  <%= f.select :sort_keyword, [ ["投稿が新しい順", "new"],
                                ["投稿が古い順","old"],
                                ["いいねが多い順","favorites"],
                                ["コメントが多い順","comments"]
                              ], include_blank: '選択してください' %>
  <%= f.submit "ソート", class: "btn btn-sm btn-secondary" %>
<% end %>
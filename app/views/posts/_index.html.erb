<div class="mb-4">
  <% posts.each do |post| %>
    <div class="row mt-3">
      <%= link_to post_path(post), class: "offset-2" do %>
        <%= attachment_image_tag post, :image,size: "200x200", format: "jpeg", fallback: "post_no_image.jpeg" %>
      <% end %>
      <div class="col-4">
        <div class="row">
          <% if user_signed_in? %>
            <%= link_to user_path(post.user) do %>
              <p class="mb-0 ml-2">
                <%= attachment_image_tag post.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg", class: "rounded-circle mr-2" %>
                <%= post.user.name %>
              </p>
            <% end %>
          <% else %>
            <p class="mb-0 ml-2">
              <%= attachment_image_tag post.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg", class: "rounded-circle mr-2" %>
              <%= post.user.name %>
            </p>
          <% end %>
        </div>
        <p class="mt-1">
          Title:
          <%= link_to post.title, post_path(post) %><br>
        </p>
        <p>
          <%= post.post_comments.count %>コメント<br>
          <%= post.favorites.count %>いいね<br>
          投稿日: <%= post.created_at.strftime('%Y/%m/%d') %>
        </p>

      </div>
    </div>
  <% end %>
</div>
<%= paginate posts %>

<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), class: "favorite-btn", method: :delete, remote: true do %>
      <i class="fas fa-thumbs-up"></i><%= post.favorites.count %>いいね
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), class: "favorite-btn", method: :post, remote: true do %>
      <i class="far fa-thumbs-up"></i><%= post.favorites.count %>いいね
    <% end %>
  <% end %>
<% else %>
  <i class="fas fa-thumbs-up"></i><%= post.favorites.count %>いいね
<% end %>
<div class="container">
  <h2 class="text-center p-3">会員情報編集</h2>
  <div class="row">
    <div class="col-9 offset-3">
      <%= render 'layouts/errors', obj: @user %>
      <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :profile_image, "プロフィール画像" %></td>
              <td><%= f.attachment_field :profile_image %></td>
            </tr>
            <tr>
              <td><%= f.label :neme, "名前" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :introduction, "プロフィール" %></td>
              <td><%= f.text_area :introduction, :size=>"30x5" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "更新", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>